<UserControl
    x:Class="Hashboard.ThemeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HashBoard"
    Width="340"
    Height="168"
    RequestedTheme="Dark">

    <StackPanel x:Name="RootPanel" Orientation="Vertical" Padding="4" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Padding="4">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontWeight="Bold">THEME SELECTION</TextBlock>
        </Grid>
        <Grid Padding="4">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">THEME STYLE</TextBlock>
            <ComboBox x:Name="ComboThemeStyle" HorizontalAlignment="Right" Width="160" ItemsSource="{Binding}"/>
        </Grid>
        <Grid Padding="4">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">ACCENT COLOR</TextBlock>
            <ComboBox x:Name="ComboAccentColor" HorizontalAlignment="Right" Width="160" ItemsSource="{Binding}"/>
        </Grid>
        <Grid Padding="4">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">BACKGROUND IMAGE</TextBlock>
            <ComboBox x:Name="ComboBackgroundImage" HorizontalAlignment="Right" Width="160" ItemsSource="{Binding}"/>
        </Grid>
    </StackPanel>
</UserControl>
